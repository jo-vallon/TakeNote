<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TakeNote.EditNote"
             Title="EditNote">
    <StackLayout>
        <Entry x:Name="txt_title" BackgroundColor="Red" Placeholder="Title"/>
        <Editor x:Name="txt_content" Placeholder="My notes"/>
        <Button x:Name="btn_add" Text="+" Pressed="btn_add_Pressed"/>
    </StackLayout>

</ContentPage>
